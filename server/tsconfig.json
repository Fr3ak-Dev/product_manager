{
    "compilerOptions": {
        "outDir": "./dist", // Directorio que se va a crear para los archivos compilados
        "rootDir": "./src", // Directorio raíz de los archivos que se van a convertir a js
        "lib": ["esnext"], // version de js a la que se va a compilar
        "strict": false, // true indica que no permite tipos any
        "sourceMap": true, // Generar archivos de mapa de origen(información interna para depuración)
        "esModuleInterop": true, // Habilita interoperabilidad con librerías CommonJS
        "declaration": true, // Generar archivos de declaración .d.ts
        "experimentalDecorators": true, // Habilita el uso de decoradores para sequelize
        "emitDecoratorMetadata": true, // Habilita la emisión de metadatos de decoradores para sequelize
        "target": "ESNext", // Versión de JavaScript a la que se va a compilar
        "moduleResolution": "nodenext", // Resolución de módulos al estilo Node.js
        "module": "NodeNext", // Módulo a utilizar, en este caso NodeNext
    },
    "include": ["src/**/*.ts"], // Archivos a incluir en la compilación
    "exclude": ["src/**/*.test.ts"]
}